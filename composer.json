{
    "name": "swisnl/phpcs-bitbucket",
    "type": "phpcs-extension",
    "description": "PHP_CodeSniffer reporter for Bitbucket Pipeline Reports",
    "keywords": [
        "phpcs",
        "PHP_CodeSniffer",
        "reporter",
        "bitbucket",
        "pipeline",
        "reports",
        "testing"
    ],
    "homepage": "https://github.com/swisnl/phpcs-bitbucket",
    "license": "MIT",
    "authors": [
        {
            "name": "Jasper Zonneveld",
            "email": "jasper@swis.nl",
            "homepage": "https://github.com/JaZo",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "squizlabs/php_codesniffer": "^3.0",
        "swisnl/bitbucket-reports": "^0.1"
    },
    "require-dev": {
        "laravel/pint": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Swis\\PHP_CodeSniffer\\Reporter\\": "src"
        }
    },
    "scripts": {
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    }
}
